<Window x:Class="boxrec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boxrec"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Boxers_DataGrid" Grid.ColumnSpan="4" Grid.Row="1"  AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="Boxers_DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID" Width="50" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="100" />
                <DataGridTextColumn Binding="{Binding Surname}" Header="Surname" Width="100" />
                <DataGridTextColumn Binding="{Binding Division}" Header="Division" Width="100" />
                <DataGridTextColumn Binding="{Binding DateOfBirth}" Header="Date of birth" Width="200" />
                <DataGridTextColumn Binding="{Binding Record}" Header="Record" Width="*" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Show details" Click="Show_Details_Click"></MenuItem>
                    <MenuItem Header="Edit" Click="Edit_Boxer_Button_Click"></MenuItem>
                    <MenuItem Header="Delete" Click="Remove_Boxer_Button_Click"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <Button x:Name="Add_Boxer_Button" Content="Add boxer" Grid.Column="0" Margin ="50 50 50 50" Click="Add_Boxer_Button_Click"/>
        <Button x:Name="Edit_Boxer_Button" Content="Edit boxer" Grid.Column="1" Margin ="50 50 50 50" Click="Edit_Boxer_Button_Click"/>
        <Button x:Name="Remove_Boxer_Button" Content="Remove boxer" Grid.Column="2" Margin="50 50 50 50" Click="Remove_Boxer_Button_Click"/>
        
    </Grid>
</Window>
