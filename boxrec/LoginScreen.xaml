<Window x:Class="boxrec.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boxrec"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300" FontSize="14">
    <Border Background ="#2137" CornerRadius="20" Margin="20">
    <StackPanel>
        <Label FontSize="25" HorizontalAlignment="Center" Margin="20" Content="Login"></Label>
            <Separator></Separator>
            <Label Content="Username:"></Label>
            <TextBox Name="txtUsername"></TextBox>
            <Label Content="Password:"></Label>
            <PasswordBox Name="txtPassword"></PasswordBox>
            <Button Click="Submit_Button_Click" Name="Submit_Button" Content="Submit" Margin="60 10"></Button>
        </StackPanel>
    </Border>
</Window>
