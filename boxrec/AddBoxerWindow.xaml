<Window x:Class="boxrec.AddBoxerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boxrec"
        mc:Ignorable="d"
        Title="Add boxer" Height="390" Width="320">
    <StackPanel>
        <Label Content="Name:"></Label>
        <TextBox x:Name="tbxName" Margin="5 5 5 5"></TextBox>
        <Label Content="Surname:"></Label>
        <TextBox x:Name="tbxSurname" Margin="5 5 5 5"></TextBox>
        <Label Content="Division:"></Label>
        <TextBox x:Name="tbxDivision" Margin="5 5 5 5"></TextBox>
        <Label Content="Date of birth:"></Label>
        <DatePicker x:Name="dpDateOfBirth" Margin="5 5 5 5" SelectedDate="01-01-1990"></DatePicker>
        <Label Content="Image URL:"></Label>
        <TextBox x:Name="tbxImageURL" Margin="5 5 5 5"></TextBox>
        <Grid>
            <Button Click="btnSave_Click" HorizontalAlignment="Left" Width="130" x:Name="btnSave" Content="Save" Margin="20 20 150 150"></Button>
            <Button Click="btnCancel_Click" HorizontalAlignment="Right" Width="130" x:Name="btnCancel" Content="Cancel" Margin="150 20 20 150"></Button>
        </Grid>
    </StackPanel>
</Window>
