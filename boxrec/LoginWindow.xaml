<Window x:Class="boxrec.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boxrec"
        mc:Ignorable="d"
        Title="Login to BoxRec" Height="350" Width="300" FontSize="14">
    <Border Background ="#2137" CornerRadius="20" Margin="20">
    <StackPanel>
        <Label FontSize="25" HorizontalAlignment="Center" Margin="20" Content="Login"></Label>
            <Separator></Separator>
            <Label Content="Username:"></Label>
            <TextBox Name="tbxUsername"></TextBox>
            <Label Content="Password:"></Label>
            <PasswordBox Name="tbxPassword"></PasswordBox>
            <Button Click="btnSubmit_Click" x:Name="btnSubmit" Content="Submit" Margin="50 40"></Button>
        </StackPanel>
    </Border>
</Window>
